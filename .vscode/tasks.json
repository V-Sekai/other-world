{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "env": {}
  },
  "tasks": [
    {
      "label": "Godot Engine",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "command": [
        "scons verbose=no warnings=no werror=yes dev_build=yes precision=double compiledb=yes optimize=speed_trace use_static_cpp=true target=editor"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Godot fetch",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/vsk_godot"
      },
      "command": [
        "git fetch origin"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Godot Checkout Godot",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/vsk_godot"
      },
      "command": [
        "git merge -s recursive -X theirs origin/groups-staging-4.x"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "Godot fetch"
      ]
    }
  ]
}
