{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "env": {}
  },
  "tasks": [
    {
      "label": "Godot Engine",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "command": [
        "scons warnings=no werror=yes dev_build=no precision=double compiledb=yes target=editor tests=yes"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": "Godot Engine Android"
    },
    {
      "label": "Godot Clean Engine",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "command": [
        "scons -c warnings=no werror=yes dev_build=no precision=double compiledb=yes target=editor"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Godot Engine Windows Clang",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "command": [
        "scons warnings=no werror=yes dev_build=no precision=double use_llvm=yes use_mingw=yes LINKFLAGS='-Wl,-pdb=' CCFLAGS='-g -gcodeview' compiledb=yes target=editor"
      ],
      "problemMatcher": [],
    },
    {
      "label": "Godot Engine Windows MSVC",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "command": [
        "scons warnings=no werror=yes dev_build=yes precision=double vsproj=yes compiledb=yes target=editor"
        // "scons warnings=no werror=yes dev_build=no precision=double use_llvm=yes use_mingw=yes LINKFLAGS='-Wl,-pdb=' CCFLAGS='-g -gcodeview' compiledb=yes target=editor"
      ],
      "problemMatcher": [],
    },
  ]
}
