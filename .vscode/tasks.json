{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "env": {}
  },
  "tasks": [
    {
      "label": "Godot Engine",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "command": [
        "scons warnings=no werror=yes dev_build=no precision=double compiledb=yes target=editor"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": "Godot Engine Android"
    },
    {
      "label": "Godot Clean Engine",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "command": [
        "scons -c verbose=no warnings=no werror=yes dev_build=yes precision=double compiledb=yes optimize=speed_trace use_static_cpp=true target=editor"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
  ]
}
